generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Habit {
 id         String  @id @default(uuid())
 title      String
 created_at DateTime

 @@map("habits")
}


model Day {
 id    String  @id @default(uuid())
 date DateTime // 2023-01-16 Dia que completou o habito

 @@unique([date])
 @@map("days")
}


model DayHabit {
 id         String  @id @default(uuid())
 title      String
 created_at DateTime

 day_id String
 habit_id String

 @@unique([day_id, habit_id]) // n√£o posso ter o mesmo habito completamento no mesmo dia
 @@map("days_habits")
}


model HabitWeekDays {
 id         String  @id @default(uuid())
 habit_id      String
 week_day Int   // cada habito vai poder registrar em qualquer dia da semana

 @@unique([ habit_id, week_day])
 @@map("habit_week_days")
}